@import '/style/iconfont.wxss';
.contain {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.scrollCustom{
  height: 88%;
}
.scrollCustom .msgContain:not(:first-child) {
  border-top: #b3b3b33a solid 0.5px;
}

.msgContain{
  min-height: 75px;
  padding: 8px;
  display: flex;
  justify-content: space-around;
}

.avatar {
  width: 32px;
  height: 32px;
  border: 1px #b3b3b399 solid;
  display: flex;
  justify-content: center;
  align-items: center;
}

.msgMiddle{
  width: 80%;
  padding: 0 0 0 8px;
}

.bottom {
  width: 100%;
  height: 12%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow:0px 3px 5px 1px #b3b3b399;
}